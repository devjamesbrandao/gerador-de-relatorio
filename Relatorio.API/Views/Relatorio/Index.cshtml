@model IEnumerable<Relatorio>
@{string className = ""; string status = "";}
    
<h2>Solicitação de relatório</h2>
<hr />
<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
                <a asp-action="Create" class="btn btn-primary">
                    <span title="Incluir Livro" class="fas fa-plus"></span> Solicitar Relatório
                </a>
            </div>
        </div>
    </div>
</div>
<br />
<div class="panel panel-default">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TipoRelatorio)
                </th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                @if(item.Concluido)
                {
                    className = "success";
                    status = "CONCLUÍDO";
                }
                else
                {
                    className = "info";
                    status = "PENDENTE";
                }
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoRelatorio)
                    </td>
                    <td>
                        <a id='relatorio-item-color-@item.Id' class='btn btn-@className disabled' style="color: white;">
                            <span class="fas fa-edit" id="relatorio-item-status-@item.Id">@status</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/signal.js"></script>